{
  "version": 2,
  "builds": [
    { "src": "backend/index.js", "use": "@vercel/node" },
    { "src": "frontend/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/clima", "dest": "/backend/index.js" },
    { "src": "/previsao", "dest": "/backend/index.js" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
